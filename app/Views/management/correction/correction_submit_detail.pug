extends ../../mixins/layout

block title
  title Correction - Code Wars

block header
  +header()

block body
  +flash
  .row.mission-header
    h1.mb-3 #{exercise.name} - #{user.firstname} #{user.lastname}
  .container
    .exercise-submit-detail.box-shadow.mb-4
      .row
        .col.pl-0.pt-4.w-75
          h3.p-4 #{user.firstname} #{user.lastname} a remis cette mission le #{format('date', studentExercise.submit_date)}
        .col-3.d-flex.m-4.align-items-center.justify-content-end.w-25
          a(href='/management/correction/download/' + exercise.id).download-button.align-self-end.pl-4.pr-4.pt-3.pb-3
            span.mr-3 Télécharger
            i.fas.fa-download
      .d-flex
        .exercise-content.p-4.w-75
          pre.mb-0
            code.p-4.language-java=fileContent

        - var action = "/management/correction/correct/" + studentExercise.student_da + "/" + studentExercise.id
        form.correct-form(action=action method="get").row.side-options.w-25
          h4 Laisser un commentaire
          textarea.p-2.pb-0(name="comment" placeholder="Commentaire").h-75
          button(type="submit").pl-4.pr-4.pt-1.pb-1.w-100.ml-0.mr-4.mt-0.mb-4
            span.mr-3 Marquer corrigé
            i.fas.fa-edit.student-icons


block script
  script(src='/javascripts/vendor/jquery-3.5.1.min.js')
  script(src="/javascripts/vendor/bootstrap.min.js")
  script(src="/javascripts/vendor/jquery-3.5.1.min.js")
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.0.3/styles/obsidian.min.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/highlight.min.js')
  script(nonce=nonce()).
    hljs.highlightAll({
        "theme": "dark"
    });
