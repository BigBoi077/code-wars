include ../../mixins/base
extends ../../mixins/layout

block title
	title Exercises - Code Wars

block header
    include ../../mixins/header
    +header()
block body
    #circle
    #circleSmallRight
    .main-container
        +flash
        h1.pageTitle Gestion des exercises
        div
            table.menuLink
                td
                    a(href='/management/exercises/create')
                        | Cr√©er un exercise
        table.exerciseTable
            tr
                td
                    | Name
                td
                    | Difficulty
                td
                    | Point Reward
                td
                    | Cash Reward
                td
                    | Edit
                td
                    | Delete
            tr
                each exercise in exercises
                    tr
                        td.exerciseInfo
                            p
                                | #{exercise.name}
                        td.exerciseInfo
                                | #{exercise.difficulty}
                        td.exerciseInfo
                                | #{exercise.point_reward}
                        td.exerciseInfo
                                | #{exercise.cash_reward} $
                        td.exerciseInfo
                            a(href='/management/exercises/' + exercise.id + '/edit')
                                |  Editer
                        td.exerciseInfo
                            a(href='/management/exercises/' + exercise.id + '/delete')
                                |  Supprimer

