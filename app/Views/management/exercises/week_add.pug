extends ../../mixins/layout

block title
  title Semaines - Code Wars

block header
  +header()

block body
  .container
    .row.mt-5.p-4.main-card
      .w-100
        .d-flex.justify-content-between.align-items-center
          h1 #{title}
        hr
      form.w-100(method='post', action=action)
        .form-row
          .form-group.col-12
            label(for="number") Numéro
            input.form-control(id="number" name="number" type="number" value=val('number'))
        .form-row
          .form-group.col-12
            label(for="startDate") Date de début
            input.form-control(id="startDate" name="startDate" type="date" value=val('startDate'))
        .form-row
          .form-group.col-12.text-muted
            small * Par défaut, la semaine est désactivée. Retourner dans la page précédente pour l'activer par la suite.
        .form-row
          button#submitBtn.btn.w-100(type='submit')
            i.fas.fa-plus-square.mr-2
            | Créer
