mixin weekProgress(week)
  .row.my-4
    .col-3
      p.mb-0 Semaine #{week.number} :
    .col-7.mt-1
      .progress
        .progress-bar(style="width: " + week.progress + "%").bg-accent
    .col-2
      p.mb-0 #{week.progress} %

mixin weekProgressSmall(week)
  .row.my-3
    .col-4.px-0
      | Semaine #{week.number} :
    .col-5.mt-1.p-0
      .progress
        .progress-bar(style="width: " + week.progress + "%").bg-accent
    .col-3
      p.mb-0 #{week.progress} %
