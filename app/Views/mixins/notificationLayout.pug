mixin notificationLayout(notifications, isHome)
  .row.d-flex.justify-content-between.align-items-center
    a(href="/profile/notifications").no-decoration
    div.d-flex.align-items-end.justify-content-end
      if notifications != null
        a(href="/notification/seeAll").text-dark
          h6.mb-4.mr-4 Coch√© tout comme vu
  #notifs(data-notifications)
    if notifications == null
      small.text-muted Vous n'avez aucune nouvelles notifications
    else
      each notif in notifications
        +notification(notif)