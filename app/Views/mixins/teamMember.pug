mixin teamMember(member, index)
  .team-member.mx-4.my-3
    .row.border-bottom
      .col-6.p-0
        h6 #{member.username}
      if index === 0
        .col-5.pr-0
          h6.text-right
           | #{member.cash} $ | #{member.points} pts
        .col-1
          i.fas.fa-medal.text-warning
      else
        .col-6.pr-2
          h6.text-right
            | #{member.cash} $ | #{member.points} pts