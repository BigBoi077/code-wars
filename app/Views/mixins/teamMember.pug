mixin teamMember(member, index)
  .team-member.mx-4.my-2
    .row.border-bottom.d-flex.justify-content-between.align-items-center.py-2
      .col-6.p-0
        .row
          h6.m-0 #{member.username}
          if index === 0
            i.ml-2.fas.fa-medal.text-warning
      .col-5.pr-0.d-flex.align-items-center.justify-content-end
        +star_wars_money(member.cash)
        .mr-2
        +star_wars_points(member.points)

