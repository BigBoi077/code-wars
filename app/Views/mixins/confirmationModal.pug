mixin confirmationModal(title, message, route, modalID)
	.modal.fade(id=modalID tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true")
		.modal-dialog
			.modal-content
				.modal-header
					h5(class="modal-title" id="modalLabel")= title
					button.btn-close#modalCloseBtn(type="button" data-bs-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;
						span.sr-only Close
				.modal-body
					p=message
				.modal-footer
					button(type="button" class="btn btn-secondary" data-bs-dismiss="modal" ) Annuler
					a(href=route)
						button(type="button" class="btn btn-danger") Confirmer

