extends ../mixins/layout

block title
  title Modification Du MDP - Code Wars

block header
  +header()

block body
  +flash
  .student-form-container
    h2.text-center.p-3 Modification du mot de passe
    form(method='post', action="/profile/update/mdp")
      .form-row
        .form-group.col-6
          label Mot de passe
          input.form-control(name='password', type='password')
        .form-group.col-6
          label Confirmer le mot de passe
          input.form-control(name='confirmPassword', type='password')
      .form-row
        button#submitBtn.btn(type='submit')
          | Modifier le mot de passe
