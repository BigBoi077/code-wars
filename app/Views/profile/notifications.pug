extends ../mixins/layout

block title
  title="Notifications - Code Wars"

block header
  +header()

block score
  +scoreBoard()

block body
  .container
    .mt-5.p-4.main-card
      .w-100
        .d-flex.justify-content-between
          .align-items-end.d-flex
            h1.mb-0 Notifications
          .align-items-end.d-flex
            if notifications != null
              a(href="/notification/seeAll").text-dark
                h6.mb-1 Coch√© tout comme vu
        hr
      #notifs(data-notifications)
        if notifications == null
          small.text-muted Vous n'avez aucune notification pour l'instant.
        else
          each notif in notifications
            +notification(notif)
