extends ../mixins/layout

block title
  title Modification Du Profil - Code Wars

block header
  +header()

block body
  #circle
  #circleSmall
  #circleSmallRight
  +flash
  .student-form-container
    h2.text-center.p-3 Modification Du Profile
    form(method='post', action=action)
      .form-row
        .form-group.col-6
          label(for="firstname") Pr√©nom
          input.form-control(placeholder="Dan" id='firstname', name='firstname', type='text' value=user.firstname)
        .form-group.col-6
          label(for="lastname") Nom
          input.form-control(placeholder="Loader" id='lastname', name='lastname', type='text' value=user.lastname)
      .form-row
        .form-group.col-6
          label(for="firstname") Mot De Passe
          input.form-control(placeholder="**********" id='password', name='password', type='password')
        .form-group.col-6
          label(for="lastname") Confirmer Le Mot De Passe
          input.form-control(id='confirmPassword', name='confirmPassword', type='password')
      .form-row
        button#submitBtn.btn(type='submit')
