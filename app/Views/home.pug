extends mixins/layout

block title
  title="Accueil - Code Wars"

block header
  +header()

block score
  +scoreBoard()

block body
  .container
    if quote !== null
      .m-5.text-center
        h3.font-italic “ #{quote} ”
    .row.mt-5.p-4.main-card
      .w-100
        h1 Accueil
        hr
      include mixins/notificationLayout
      .col-6.p-0
        +notificationLayout(notifications)
      .col-6.p-0
        if isTeacher === false
          h4.mb-4 Membres de mon équipe
          .card.py-3
            each member in teamMembers
              +teamMember(member)
