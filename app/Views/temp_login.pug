include mixins/base

doctype html
html
  head
    title CodeWars - Login
    meta(charset='utf-8')
    body
      +flash
      form(method='post', action='/login')
        label(for='da')
          | DA
        br
        input(id='da', type='text', name='da')
        br

        label(for='password')
          | Mot de passe
        br
        input(id='password', type='password', name='password')
        br
        label(for='remember_me')
          | Se souvenir de moi
        input(id='remember_me', type='checkbox', name='remember_me')
        br
        button(type='submit')
          | Connexion